@{
    ViewData["Title"] = "AAUP LabMaster";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Home</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
</head>
<body class="bg-white text-black font-sans flex flex-col min-h-screen">

    <!-- Header -->
    <header class="bg-[#8B0000] text-white py-2 text-center text-xl font-semibold">
        Book Labs and Equipment at AAUP
    </header>

    <!-- Logo & Actions -->
    <div class="flex justify-between items-center px-6 py-3 bg-white">
        <img src="/Image/aaup logo.png" alt="AAUP logo" class="h-14" />
        <div class="flex gap-4">
            <a href="/Account/Login" class="text-black text-xs text-center">
                <i class="fas fa-sign-in-alt text-2xl"></i><br />log in
            </a>
            <a href="/Account/Signup" class="text-black text-xs text-center">
                <i class="fas fa-user-plus text-2xl"></i><br />sign up
            </a>
        </div>
    </div>

    <!-- Image and Title -->
    <div class="flex flex-col md:flex-row items-center justify-between px-6 py-4">
        <div class="text-center md:text-left">
            <h2 class="text-[#3f5a00] text-xl font-bold mb-1">AAUP Labs</h2>
            <h3 class="text-[#8B0000] text-2xl font-extrabold">مختبرات الجامعة العربية الأمريكية</h3>
        </div>
        <img src="/Image/aaup campus.png" alt="AAUP buildings" class="w-2/3 md:w-1/3 rounded" />
    </div>

    <!-- Info Text -->
    <section class="px-6 py-4 text-sm leading-relaxed max-w-5xl mx-auto">
        <p>
            Book an appointment to use AAUP labs and equipment easily and flexibly.
            Choose the appropriate lab, select your desired time, and
            <a href="#" class="text-green-700 underline">submit your request now.</a>
        </p>
    </section>

    <!-- Buttons -->
    <section class="flex flex-col w-full px-6 gap-3 max-w-md mx-auto mb-6">
        <a href="/Home/BookNow" class="bg-[#3f5a00] text-white text-base font-semibold py-2 rounded text-center hover:bg-[#2e3f00] transition">Book Now</a>
        <a href="/User/FormPage" class="bg-[#3f5a00] text-white text-base font-semibold py-2 rounded text-center hover:bg-[#2e3f00] transition">Discover AAUP Labs</a>
        <a href="/Home/FAQ" class="bg-[#3f5a00] text-white text-base font-semibold py-2 rounded text-center hover:bg-[#2e3f00] transition">FAQ</a>
        <a href="/Home/ContactUs" class="bg-[#3f5a00] text-white text-base font-semibold py-2 rounded text-center hover:bg-[#2e3f00] transition">Contact us</a>
    </section>

    <!-- Login Suggestion -->
    <section class="text-center text-sm text-black px-6 mb-6">
        <p>
            <a href="/Account/Login" class="text-green-700 underline">Log in</a> to book an appointment or
            <a href="/Account/Signup" class="text-green-700 underline">sign up</a> if you don’t have an account.
        </p>
    </section>

    <!-- Footer -->
    <footer class="bg-[#8B0000] text-white px-6 py-4 flex flex-col md:flex-row justify-between items-center text-sm">
        <div class="flex items-center gap-2">
            <i class="fas fa-map-marker-alt"></i>
            Jenin - Palestine
        </div>
        <div class="flex items-center gap-2">
            <i class="fas fa-phone-alt"></i>
            +(970)123456789
        </div>
        <div class="flex items-center gap-2">
            <i class="fas fa-envelope"></i>
            <a href="mailto:labs@aaup.edu" class="underline hover:text-gray-300">labs@aaup.edu</a>
        </div>
    </footer>

</body>
</html>