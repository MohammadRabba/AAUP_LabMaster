        <!-- Quick Actions Section -->
        <div class="mb-8">
            <h2 class="text-xl font-semibold text-dark mb-4">Quick Actions</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                <!-- Booking Management -->
                <a href="/Admin/BookingManagement" class="group">
                    <div class="bg-white p-6 rounded-xl shadow-sm hover:shadow-md transition-all duration-300 border border-gray-100 hover:border-primary/30 h-full">
                        <div class="flex items-start space-x-4">
                            <div class="bg-primary/10 p-3 rounded-lg text-primary group-hover:bg-primary/20 transition">
                                <i class="fas fa-calendar-plus text-xl"></i>
                            </div>
                            <div>
                                <h3 class="font-semibold text-dark group-hover:text-primary transition">Booking Management</h3>
                                <p class="text-sm text-gray-600 mt-1">Add new booking requests for lab & equipment</p>
                            </div>
                        </div>
                    </div>
                </a>

                <!-- User Management -->
                <a href="/Admin/UserManagement" class="group">
                    <div class="bg-white p-6 rounded-xl shadow-sm hover:shadow-md transition-all duration-300 border border-gray-100 hover:border-secondary/30 h-full">
                        <div class="flex items-start space-x-4">
                            <div class="bg-secondary/10 p-3 rounded-lg text-secondary group-hover:bg-secondary/20 transition">
                                <i class="fas fa-user-cog text-xl"></i>
                            </div>
                            <div>
                                <h3 class="font-semibold text-dark group-hover:text-secondary transition">User Management</h3>
                                <p class="text-sm text-gray-600 mt-1">Manage all user accounts and permissions</p>
                            </div>
                        </div>
                    </div>
                </a>

                <!-- Lab Settings -->
                <a href="/Admin/LabSettings" class="group">
                    <div class="bg-white p-6 rounded-xl shadow-sm hover:shadow-md transition-all duration-300 border border-gray-100 hover:border-purple-500/30 h-full">
                        <div class="flex items-start space-x-4">
                            <div class="bg-purple-500/10 p-3 rounded-lg text-purple-500 group-hover:bg-purple-500/20 transition">
                                <i class="fas fa-flask text-xl"></i>
                            </div>
                            <div>
                                <h3 class="font-semibold text-dark group-hover:text-purple-500 transition">Lab Settings</h3>
                                <p class="text-sm text-gray-600 mt-1">Configure lab equipment and maintenance</p>
                            </div>
                        </div>
                    </div>
                </a>

                <!-- Reports -->
                <a href="/Admin/Reports" class="group">
                    <div class="bg-white p-6 rounded-xl shadow-sm hover:shadow-md transition-all duration-300 border border-gray-100 hover:border-blue-500/30 h-full">
                        <div class="flex items-start space-x-4">
                            <div class="bg-blue-500/10 p-3 rounded-lg text-blue-500 group-hover:bg-blue-500/20 transition">
                                <i class="fas fa-chart-bar text-xl"></i>
                            </div>
                            <div>
                                <h3 class="font-semibold text-dark group-hover:text-blue-500 transition">Reports & Statistics</h3>
                                <p class="text-sm text-gray-600 mt-1">View lab usage analytics and reports</p>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <!-- Recent Activity Section (optional) -->
        <div class="bg-white rounded-xl shadow-sm p-6">
            <div class="flex items-center justify-between mb-6">
                <h2 class="text-xl font-semibold text-dark">Recent Activity</h2>
                <a href="#" class="text-sm text-primary hover:underline">View all</a>
            </div>
            
            <div class="space-y-4">
                <div class="flex items-start space-x-4 p-3 hover:bg-gray-50 rounded-lg transition">
