
@model List<AAUP_LabMaster.Models.User>
@{
    ViewData["Title"] = "User Management";
}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
<script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">
    <a asp-action="AddUser" asp-controller="Admin"
       class="inline-block mb-4 bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition">
        + Add New User
    </a>
<!--Header-->
<header class="bg-[#9B0B0B] text-white p-4 flex justify-between items-center">
<h1 class="text-xl font-bold">AAUP_LabMaster</h1>
<nav>
   <a href="/Home/Index" class="px-4 hover:underline">Home</a>
   <a href="/Account/Login" class="px-4 hover:underline">Logout</a>
</nav>
</header>

<h2 class="text-2xl font-bold mb-4">User List</h2>
  <table class="table-auto w-full text-left border-collapse">
 <thead>
 <tr class="bg-gray-200">
 <th class="px-4 py-2">FullName</th>
 <th class="px-4 py-2">Email</th>
  <th class="px-4 py-2">Role</th>
 </tr>
 </thead>
 <tbody>
@foreach(var user in Model)
{
  <tr class="border-b">
 <td class="px-4 py-2">@user.FullName</td>
 <td class="px-4 py-2">@user.Email</td>
  @* <td class="px-4 py-2">@user.Role</td> *@
 </tr>
}
 </tbody>
</table>
</body>
</html>
