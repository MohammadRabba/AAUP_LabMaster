@model List<AAUP_LabMaster.Models.Booking>
@{
    ViewData["Title"] = "Reports & Statistics";
}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
<script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">

<!--Header-->
<header class="bg-[#9B0B0B] text-white p-4 flex justify-between items-center">
<h1 class="text-xl font-bold">AAUP_LabMaster</h1>
<nav>
   <a href="/Home/Index" class="px-4 hover:underline">Home</a>
   <a href="/Account/Login" class="px-4 hover:underline">Logout</a>
</nav>
</header>

<h2 class="text-2xl font-bold mb-4">Reports & Statistics</h2>
 <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
  <div class="bg-white p-6 rounded shadow">
  <h3 class="text-lg font-semibold mb-2">Total Bookings</h3>
   <p class="text-3xl text-blue-600 font-bold">@ViewBag.TotalBookings</p>
   </div>

   <div class="bg-white p-6 rounded shadow">
  <h3 class="text-lg font-semibold mb-2">Most Used Lab</h3>
   <p class="text-3xl text-blue-600 font-bold">@ViewBag.MostUsedLab</p>
   </div>

   

</div>
</body>
</html>