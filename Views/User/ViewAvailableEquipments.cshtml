@model List<AAUP_LabMaster.Models.Equipment>
@{
    ViewData["Title"] = "Available Equepments";
}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
<script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">

<!--Header-->
<header class="bg-[#9B0B0B] text-white p-4 flex justify-between items-center">
<h1 class="text-xl font-bold">AAUP_LabMaster</h1>
<nav>
   <a href="/Home/Index" class="px-4 hover:underline">Home</a>
   <a href="/Account/Login" class="px-4 hover:underline">Logout</a>
</nav>
</header>

<h2 class="text-2xl font-bold mb-4">Available Equepments</h2>
<table class="table-auto w-full text-left border-collapse">
   <thead>
  <tr class="bg-gray-200">
  <th class="px-4 py-2">Name</th>
  <th class="px-4 py-2">Description</th>
  <th class="px-4 py-2">Status</th>
  </tr>
   </thead>
<tbody>
 @foreach (var equipment in Model){
   <tr class="border-b">
  <td class="px-4 py-2">@equipment.Name</td>
  <td class="px-4 py-2">@equipment.Description</td>
  @* <td class="px-4 py-2">@equipment.Status</td> *@
  </tr> 
 }
</tbody>
</table>
</body>
</html>