@model List<AAUP_LabMaster.Models.Booking>
@{
    ViewData["Title"] = "My Requests";
}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
<script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">

<!--Header-->
<header class="bg-[#9B0B0B] text-white p-4 flex justify-between items-center">
<h1 class="text-xl font-bold">AAUP_LabMaster</h1>
<nav>
   <a href="/Home/Index" class="px-4 hover:underline">Home</a>
   <a href="/Account/Login" class="px-4 hover:underline">Logout</a>
</nav>
</header>

<h2 class="text-2xl font-bold mb-4">Your Lab Booking Requests</h2>
<table class="table-auto w-full text-left border-collapse">
   <thead>
  <tr class="bg-gray-200">
  <th class="px-4 py-2">LabName</th>
  <th class="px-4 py-2">Date</th>
  <th class="px-4 py-2">Time</th>
  </tr>
   </thead>
<tbody>
 @foreach (var request in Model){
   <tr class="border-b">
                    <td class="px-4 py-2">@request.Equipment.Lab.Name</td>
  <td class="px-4 py-2">@request.Date.ToShortDateString()</td>
  @* <td class="px-4 py-2">@request.Time</td> *@
  </tr> 
 }


</tbody>
</table>
</body>
</html>