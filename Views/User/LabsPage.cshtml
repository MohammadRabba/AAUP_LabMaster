@model List<AAUP_LabMaster.Models.Lab>
@{
    ViewData["Title"] = "Discover Labs";
        Layout = "_UserLayout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style> body { font-family: 'Roboto', sans-serif; } </style>
</head>

<body class="bg-gray-100 min-h-screen">
 
 
<nav class="flex justify-between items-center px-4 py-3 bg-white">
    <div class="flex items-center space-x-3">
        <img src="/Image/aaup logo.png" alt="AAUP logo" class="h-14" />
    </div>
    <div class="flex space-x-6 text-center text-xs text-black">
        <a href="/Account/Login" class="flex flex-col items-center cursor-pointer">
            <i class="fas fa-user-clock text-2xl"></i>
            <span class="mt-1">Log In</span>
        </a>
        <a href="/Account/Register" class="flex flex-col items-center cursor-pointer">
            <i class="fas fa-user-plus text-2xl"></i>
            <span class="mt-1">Sign Up</span>
        </a>
    </div>
</nav>

<main class="p-8">
    <div class="mb-6">
        <h2 class="text-2xl font-bold">Explore Our Labs</h2>
        <p class="text-gray-700">Find the perfect lab for your needs.</p>
    </div>
  <div class="mb-6">
    <a href="/User/FormPage" class="inline-block bg-green-700 text-white px-4 py-2 rounded hover:bg-green-900">Start Booking Now</a>
  </div>
    <ul class="space-y-6">
    @foreach (var lab in Model)
     {
            <li class="border p-4 rounded shadow">
    <h3 class="text-xl font-semibold">@lab.Name</h3>
        <p class="text-gray-600">@lab.Description</p>
    <a href="/User/RequestLab?labName=@lab.Name" class="mt-3 inline-block bg-red-600 text-white rounded px-4 py-2"> View Lab</a>
            </li>
        }
    </ul>
</main>
 

</body>
</html>