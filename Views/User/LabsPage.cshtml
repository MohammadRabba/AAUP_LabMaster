@model List<AAUP_LabMaster.Models.Lab>

@{
    ViewData["Title"] = "Manage Labs";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">
    <header class="bg-[#9B0B0B] text-white p-4 flex justify-between items-center">
        <h1 class="text-xl font-bold">AAUP_LabMaster</h1>
        <nav>
            <a href="/Home/Index" class="px-4 hover:underline">Home</a>
            <a href="/Account/Login" class="px-4 hover:underline">Logout</a>
        </nav>
    </header>
    @* <a asp-action="AddNewEquipment" asp-controller="supervisour"
       class="inline-block mb-4 bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition">
        + Add New Lab
    </a> *@

    <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Manage Labs</h2>








        <table class="table-auto w-full text-left border-collapse">
            <thead>
                <tr class="bg-gray-200">
                    <th class="px-4 py-2">Name</th>
                    <th class="px-4 py-2">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var lab in Model)
                {
                    <tr class="border-b">
                        <td class="px-4 py-2">@lab.Name</td>
                        <td class="px-4 py-2">
                            <a asp-action="GetEquipmentByLabId"
                               asp-controller="Supervisour"
                               asp-route-id="@lab.Id"
                               class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-3 rounded">
                                View Equipment
                            </a>




                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>