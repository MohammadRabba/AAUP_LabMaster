@model List<AAUP_LabMaster.Models.Notification>
@{
    ViewData["Title"] = "Notifications";
}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
<script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">

<!--Header-->
<header class="bg-[#9B0B0B] text-white p-4 flex justify-between items-center">
<h1 class="text-xl font-bold">AAUP_LabMaster</h1>
<nav>
   <a href="/Home/Index" class="px-4 hover:underline">Home</a>
   <a href="/Account/Login" class="px-4 hover:underline">Logout</a>
</nav>
</header>

<div class="max-w-3xl mx-auto mt-10 p-6 bg-white rounded shadow">
    <h2 class="text-2xl font-semibold mb-4 text-[#2e3f00]">Your Notifications</h2>
  </div>
@if (!Model.Any())
{
    <div class="bg-yellow-100 border border-yellow-300 text-yellow-800 p-4 rounded">No Notifications at the moment.</div>
}
else{
    <ul class="space-y-4">
    @foreach (var note in Model)
    {
      <li class="p-4 rounded shadow-sm border 
        @(note.IsRead ? "bg-gray-200 border-gray-300" : "bg-green-100 border-green-300")">

        <div class="text-gray-800 font-medium">@note.Message</div>
        <div class="text-sm text-gray-500 mt-1">@note.DateCreated.ToString("f")</div>

        @if (!note.IsRead)
        {
            <form asp-controller="User" asp-action="MarkAsRead" method="post" class="mt-2">
                <input type="hidden" name="id" value="@note.Id" />
                <button type="submit" class="text-sm text-blue-600 hover:underline">Mark as Read</button>
            </form>
        }
        else
        {
            <div class="text-xs text-gray-600 italic mt-2">Marked as read</div>
        }
    </li>
    }
</ul>
}
<footer class="bg-[#9B0B0B] text-white text-center py-4 mt-10">
 <p>&copy; 2025 AAUP_LabMaster | lab@aaup.edu</p>
</footer>
</body>
</html>